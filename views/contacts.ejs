  .article{
    width: 90%;
  }
  .toparticle{
    width: 90%;
  }
  .top-title h2{
    font-size: 2.5vh;
  }
  .title-con h2{
    font-size: 2.5vh;
  }
}

/* 
  ##Device = Tablets, Ipads (portrait)
  ##Screen = B/w 768px to 1024px
*/

@media (min-width: 768px) and (max-width: 1024px) {
  
  .right-info-con img{
    height: 80%;
  }
  .left-main-info-con h1{
      font-size: 4vw;
      margin-bottom: 15px;
      margin-top: 70px;
  }
  .left-main-info-con h2{
    font-size: 2vw;
    font-weight: 500;
  }
  .toparticle{
    width: 95%;
    height: 18%;
  }
  .top-title h2{
    font-size: 2vw;
  }
  .article{
    width: 95%;
    height: 15%;
  }
  .article a{
    font-size: 12px;
  }
  .title-con h2{
    font-size: 2vw;
  }
  
}

